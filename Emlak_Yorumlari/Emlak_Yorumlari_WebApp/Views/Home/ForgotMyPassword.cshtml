
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="~/Content/login-register.css" rel="stylesheet" />
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>

   
</head>
<body>

    <!------ Include the above in your HEAD tag ---------->
    <br />
    <br />
    <br />
    @using (Html.BeginForm())
    {
        <section class="login-info">
            <div class="container">
                <div class="row main">
                    <div class="form-header">
                        <h1 class="text-center ">Şifreyi Sıfırla </h1>
                    </div>
                    <div class="main-content">

                        
                        <div class="input-group">

                            <span class="input-group-addon"><span class="glyphicon glyphicon-envelope" aria-hidden="true"></span></span>
                            <input id="email" type="text" class="form-control" name="email" placeholder="Kayıt E-mail Adresinizi Giriniz.">
                            
                        </div>
                        <div class="input-group">
                            <h5> E-Posta Adresinize Yeni Şifreniz Gönderilecektir.</h5>
                        </div>


                        <div class="form-group ">
                            <a href="../Home/Login">
                                 <button type="submit" class="btn btn-warning btn-lg btn-block login-button">Şifreyi Sıfırla</button>
                            </a>
                           



                        </div>
                       




                    </div>
                </div>
            </div>
        </section>
    }

</body>
</html>
